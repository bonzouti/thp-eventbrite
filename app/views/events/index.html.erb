<div class="bg-light p-5">

  <div class="container">
    <h2 class="text-center pb-3 text-uppercase">Évènements</h2>
    <div class="card-columns">
      <% @events.each do |event| %>
      <div class="card text-center">
        <div class="card-body p-5">
          <h5 class="card-title h2"> <%= event.title %> </h5>
          <p class="card-text"> <span class="font-weight-bold"> <%= event.id %> </span> • <%= event.description %> </p>
          <%= link_to "Aller sur l'évènement", event_path(event.id), class:"btn btn-outline-dark btn-lg"%><br>
        </div>
      </div>
      <% end %>
    </div>

  </div>

</div>